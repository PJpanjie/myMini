page {
  background: #009c8a;
}

.inputBox {
  font-size: 30rpx;
}

.title {
  font-size: 80rpx;
  font-weight: bold;
  text-align: center;
  padding: 150rpx 0;
  color: #fff;
}

.inputCon {
  padding: 0 100rpx;
  box-sizing: border-box;
}

.usernameCon, .passwordCon {
  width: 100%;
  height: 80rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.usernameCon image, .passwordCon image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  opacity: .7;
}

.codeCon {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}

.codeCon input {
  width: 300rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.codeCon image {
  width: 200rpx;
  height: 80rpx;
  border-radius: 10rpx;
}

.loginBtn {
  width: 550rpx;
  margin: 100rpx auto;
  background: #ff9100;
  color: #fff;
}