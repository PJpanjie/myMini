
page {
  width: 100%;
  height: 100%;
}

.mineBox {
  width: 100%;
  height: 100%;
  background: #f8f8f8;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
}

.mineCon {
  flex: auto;
  overflow-y: scroll;
  padding-bottom: 40rpx;
  -webkit-overflow-scrolling : touch;
}

.head {
  width: 100%;
  background: #fff;
  padding: 20rpx 50rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.head .headImg {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
}

.headMess {
  display: flex;
  flex-direction: column;
}

.headType {
  display: flex;
}

.ver {
  padding: 0 10rpx;
  font-size: 28rpx;
  border-radius: 25rpx;
  background: #edfbed;
  color: #31cd37;
  text-align: center;
  border: 2rpx solid #b6edaf;
  margin-top: 10rpx;
}

.list {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.list image {
  width: 30rpx;
  height: 30rpx;
}

.gradeCon {
  padding: 20rpx;
  box-sizing: border-box;
}

.grade {
  width: 100%;
  background: #75cd46;
  border-radius: 20rpx;
  color: #fff;
  /* font-size: 26rpx; */
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.gradeRec {
  display: flex;
  border-bottom: 2rpx solid #fff;
  align-items: center;
  margin: 20rpx 0 0;
  padding-bottom: 10rpx;
}

.gradeRec text {
  font-size: 40rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.gradeTxt {
  padding-top: 20rpx;
}

.menuList {
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  /* font-size: 28rpx; */
  margin-top: 20rpx;
}

.menuName {
  display: flex;
  align-items: center;
}

.menuName text {
  color: #c7c7c8;
  margin-left: 20rpx;
}

.menuList image {
  width: 40rpx;
  height: 40rpx;
  transform: rotate(-90deg);
}

.btnList {
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
}

.changeRole, .outBtn {
  width: 280rpx;
  height: 100rpx;
  border: 2rpx solid #efefef;
  line-height: 100rpx;
  text-align: center;
  background: #fff;
  border-radius: 50rpx;
  margin: 0 20rpx;
  box-shadow: 0 0 10rpx 0rpx #efefef;
}

.outBtn {
  color: #f70000;
}

/* 吸底 */
.tabBar {
  width: 100%;
  height: 100rpx;
  border-top: 2rpx solid #efefef;
  z-index: 5;
  background: #fff;
  display: flex;
  flex: none;
}

.mainPage, .mine {
  flex: 1;
  text-align: center;
  line-height: 100rpx;
}

.tabBar view.on {
  color: #fff;
  background: #75cd46;
}